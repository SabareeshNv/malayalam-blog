---
interface Props {
    date: Date;
    class?: string;
}

const { date, ...props } = Astro.props;

const fullDate = date.toISOString();
const localDateString = date.toLocaleDateString("en-us", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<time datetime={fullDate} {...props}>{localDateString}</time>
